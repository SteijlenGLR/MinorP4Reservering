{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Deno",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "program": "${file}",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all"
            ],
            "outputCapture": "std",
            "attachSimplePort": 9229
        }
    ]
}